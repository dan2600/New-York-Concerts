class {
  onCreate() {
    this.state = {
      sortStyle: "date",
      reverse: false
    }
  }
    reSort(sort) {
        if(this.state.sortStyle === sort && this.state.reverse === false){
            this.state.reverse = true;
        }
        else{
            this.state.reverse = false;
        }
    this.state.sortStyle = sort;
  }
  openMap(index, array){
    window.open("https://www.google.com/maps/search/?api=1&query="+encodeURIComponent(array[index].V.N+" "+array[index].V.Ad+" "+array[index].V.C+" "+array[index].V.SC));
  }
  openSearch(index, array){
    window.open("https://www.google.com/search?q="+encodeURIComponent(array[index].A[0].Name+" "+new Date(array[index].D).toDateString()+" "+array[index].V.N));
  }
  openLink(index, array){
    window.open(array[index].TU);
  }
  openVenu(index, array){
    window.open(array[index].V.Url);
  }
}
<ul style="width:100%; overflow:auto; display:table">
<span.th.thh.d on-click('reSort', 'date')>Date</span>
<span.th.thh on-click('reSort', 'artist')>Artists</span>
<span.th.thh on-click('reSort', 'venue')>Venue</span>
<span.th.thh.c on-click('reSort', 'city')>City</span>
</ul>
$ var events = input.events;
<if(state.sortStyle === "date")>
$ events = events.sort(function(a,b) {return (new Date(a.D) > new Date(b.D)) ? 1 : ((new Date(b.D) > new Date(a.D)) ? -1 : 0);} );
</if>
<else-if(state.sortStyle === "venue")>
$ events = events.sort(function(a,b) {return (a.V.N > b.V.N) ? 1 : ((b.V.N > a.V.N) ? -1 : 0);} );
</else-if>
<else-if(state.sortStyle === "artist")>
$ events = events.sort(function(a,b) {return (a.A[0].N > b.A[0].N) ? 1 : ((b.A[0].N > a.A[0].N) ? -1 : 0);} );
</else-if>
<else-if(state.sortStyle === "city")>
$ events = events.sort(function(a,b) {return (a.V.C > b.V.C) ? 1 : ((b.V.C > a.V.C) ? -1 : 0);} );
</else-if>
<if(state.reverse === true)>
$ events = events.reverse();
</if>
<ul for(event in events | status-var=loop)>
            <span.th.d>${new Date(event.D).toDateString().split(new Date().getFullYear())[0]}</span>
            <if(event.TU !== undefined)>
            <span.th on-click('openLink', loop.getIndex(), events)>
            <span for(Artist in event.A | separator=" and ")>${Artist.N}</span>
            </span>
            </if>
            <else>
            <span.th on-click('openSearch', loop.getIndex(), events)>
            <for(Artist in event.A | separator=" and ")>${Artist.N}</for>
            </span>
            </else>
            <if(event.V.Url !== undefined)>
            <span.th on-click('openVenu', loop.getIndex(), events)>${event.V.N}</span>
            </if>
            <else>

            <span.th><a href="#">${event.V.N}</a></span>
            </else>
            <span.th.c on-click('openMap', loop.getIndex(), events)>${event.V.C}, ${event.V.SC}</span>
</ul>